<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="textsize_1">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="textsize_2">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="textsize_3">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TitleBlackStyle" parent="textsize_3">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="HeadingStyle" parent="textsize_2">
        <item name="android:textColor">@color/heading_color</item>
        <item name="android:textStyle">normal</item>
    </style>
</resources>